<h2>My Saved Books</h2>

{{#if books.length}}
  <ul>
    {{#each books}}
      <li>
        <strong>{{this.title}}</strong> by {{this.author}}<br>
        <em>{{this.description}}</em>
        <button class="delete-btn" data-id="{{this.id}}">Delete</button>
      </li>
    {{/each}}
  </ul>
